{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./base.json",
	"compilerOptions": {
		"jsx": "preserve",
		"jsxImportSource": "astro",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowJs": true,
		"noEmit": true,
		"types": ["astro/client"]
	},
	"include": ["**/*.ts", "**/*.tsx", "**/*.astro"],
	"exclude": ["node_modules"]
}
