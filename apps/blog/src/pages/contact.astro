---
import PageLayout from "@layouts/PageLayout.astro";
import { getAuthor } from "@lib/db";

const author = await getAuthor();
const socialLinks = author?.socialLinks as Record<string, string> | null;
---

<PageLayout
	title="Contact - Kunjan Dalal"
	description="Get in touch for consulting, speaking engagements, or book a paid consultation session via Topmate."
	hero={{
		title: "Let's work together",
		subtitle: "Serious inquiries only, please.",
	}}
>
	<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
		<!-- Contact Information -->
		<div>
			<h2 class="text-display text-3xl font-bold mb-8">Get in touch</h2>

			<div class="space-y-6">
				<!-- Email -->
				<div class="card bg-base-200">
					<div class="card-body">
						<h3 class="card-title text-display mb-2">Email</h3>
						<div class="space-y-2">
							<p>
								<strong>Personal:</strong>{" "}
								<a href="mailto:contact@kunjan.in" class="link link-primary">
									contact@kunjan.in
								</a>
							</p>
							<p>
								<strong>Professional:</strong>{" "}
								<a href="mailto:kunjan.dalal@fuzzycloud.in" class="link link-primary">
									kunjan.dalal@fuzzycloud.in
								</a>
							</p>
						</div>
					</div>
				</div>

				<!-- Social Links -->
				{
					socialLinks && (
						<div class="card bg-base-200">
							<div class="card-body">
								<h3 class="card-title text-display mb-4">Connect</h3>
								<div class="flex gap-4 flex-wrap">
									{socialLinks.github && (
										<a
											href={socialLinks.github}
											target="_blank"
											rel="noopener noreferrer"
											class="btn btn-outline btn-sm gap-2"
										>
											<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
												<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
											</svg>
											GitHub
										</a>
									)}
									{socialLinks.linkedin && (
										<a
											href={socialLinks.linkedin}
											target="_blank"
											rel="noopener noreferrer"
											class="btn btn-outline btn-sm gap-2"
										>
											<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
												<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
											</svg>
											LinkedIn
										</a>
									)}
									{socialLinks.twitter && (
										<a
											href={socialLinks.twitter}
											target="_blank"
											rel="noopener noreferrer"
											class="btn btn-outline btn-sm gap-2"
										>
											<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
												<path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z" />
											</svg>
											Twitter
										</a>
									)}
								</div>
							</div>
						</div>
					)
				}

				<!-- Expectation Setting -->
				<div class="alert alert-info">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						fill="none"
						viewBox="0 0 24 24"
						class="stroke-current shrink-0 w-6 h-6"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
						></path>
					</svg>
					<div>
						<h3 class="font-bold">Please note:</h3>
						<ul class="text-sm mt-2 space-y-1">
							<li>• Serious inquiries only</li>
							<li>• No free consulting via email</li>
							<li>• Book a paid session for quick consultations</li>
							<li>• Response time: 1-3 business days</li>
						</ul>
					</div>
				</div>
			</div>
		</div>

		<!-- Topmate Booking -->
		<div>
			<h2 class="text-display text-3xl font-bold mb-8">Book a consultation</h2>

			<div class="card bg-base-200">
				<div class="card-body">
					<p class="mb-4">
						Need a quick consultation, code review, or technical advice? Book a paid session via
						Topmate:
					</p>

					<!-- Topmate Widget -->
					<div class="w-full" style="min-height: 500px;">
						<iframe
							src="https://topmate.io/embed/profile/kunjan_dalal?theme=D5534D"
							frameborder="0"
							width="100%"
							height="600"
							style="border-radius: 8px;"
						></iframe>
					</div>

					<div class="divider"></div>

					<div class="text-sm opacity-80">
						<h4 class="font-semibold mb-2">What to expect:</h4>
						<ul class="list-disc list-inside space-y-1">
							<li>30-60 minute focused sessions</li>
							<li>Practical advice, no fluff</li>
							<li>Honest opinions and clear recommendations</li>
							<li>Follow-up notes and action items</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- What I Can Help With -->
	<section class="mb-16">
		<h2 class="text-display text-3xl font-bold mb-8 text-center">What I can help with</h2>

		<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
			<div class="card bg-base-100 shadow-sm">
				<div class="card-body">
					<h3 class="card-title text-display">Consulting Projects</h3>
					<ul class="text-sm space-y-1 opacity-80">
						<li>• Architecture design and reviews</li>
						<li>• System audits</li>
						<li>• Technical strategy</li>
						<li>• Long-term engagements</li>
					</ul>
				</div>
			</div>

			<div class="card bg-base-100 shadow-sm">
				<div class="card-body">
					<h3 class="card-title text-display">Speaking & Training</h3>
					<ul class="text-sm space-y-1 opacity-80">
						<li>• Conference talks</li>
						<li>• Technical workshops</li>
						<li>• Team training</li>
						<li>• Corporate events</li>
					</ul>
				</div>
			</div>

			<div class="card bg-base-100 shadow-sm">
				<div class="card-body">
					<h3 class="card-title text-display">Quick Consultations</h3>
					<ul class="text-sm space-y-1 opacity-80">
						<li>• Code reviews</li>
						<li>• Architecture feedback</li>
						<li>• Technical Q&A</li>
						<li>• Career advice</li>
					</ul>
				</div>
			</div>
		</div>
	</section>

	<!-- CTA -->
	<section class="text-center bg-base-200 rounded-lg p-12">
		<p class="text-lg opacity-80 mb-6">
			Looking forward to hearing from you.
		</p>
		<p class="text-xl font-semibold">
			Let's build something that actually works.
		</p>
	</section>
</PageLayout>
