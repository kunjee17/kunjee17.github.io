---
import AdSense from "@components/AdSense.astro";
import AuthorByline from "@components/AuthorByline.astro";
import FAQSection from "@components/FAQSection.astro";
import RelatedWritings from "@components/RelatedWritings.astro";
import BaseLayout from "./BaseLayout.astro";

interface Props {
	writing: {
		title: string;
		slug: string;
		description?: string;
		content: string;
		ogImage?: string;
		canonicalUrl?: string;
		keywords?: string[];
		publishedAt?: Date;
		updatedAt?: Date;
		readingTime?: number;
		wordCount?: number;
		schemaJson?: object;
	};
	author: {
		name: string;
		bio?: string;
		credentials?: string;
		profilePicture?: string;
		website?: string;
	};
	tags?: { name: string; slug: string }[];
	categories?: { name: string; slug: string }[];
	faqs?: { question: string; answer: string; order?: number }[];
	relatedWritings?: {
		title: string;
		slug: string;
		summary?: string;
		linkType?: string;
	}[];
}

const {
	writing,
	author,
	tags = [],
	categories = [],
	faqs = [],
	relatedWritings = [],
} = Astro.props;
---

<BaseLayout
	title={writing.title}
	description={writing.description}
	ogImage={writing.ogImage}
	canonicalUrl={writing.canonicalUrl}
	keywords={writing.keywords}
	article={true}
	publishedTime={writing.publishedAt}
	modifiedTime={writing.updatedAt}
	author={{ name: author.name, url: author.website }}
	schemaJson={writing.schemaJson}
>
	<article class="content-wrapper py-12">
		<!-- Hero Section -->
		<header class="mb-12 max-w-4xl mx-auto">
			<h1 class="text-display text-4xl md:text-5xl font-bold mb-4">{writing.title}</h1>

			{writing.description && <p class="text-xl opacity-80 mb-6">{writing.description}</p>}

			<!-- Meta info -->
			<div class="flex gap-4 text-sm opacity-70 mb-6">
				{writing.readingTime && <span>{writing.readingTime} min read</span>}
				{writing.wordCount && <span>{writing.wordCount.toLocaleString()} words</span>}
			</div>

			<!-- Author byline -->
			<AuthorByline
				author={author}
				publishedAt={writing.publishedAt}
				modifiedAt={writing.updatedAt}
			/>
		</header>

		<!-- Main Content -->
		<div class="max-w-4xl mx-auto">
			<div class="prose-custom">
				<slot />
			</div>

			<!-- In-article ad -->
			<AdSense slot="in-article" />

			<!-- Tags & Categories -->
			{
				(tags.length > 0 || categories.length > 0) && (
					<div class="my-12 pt-8 border-t border-base-300">
						{categories.length > 0 && (
							<div class="mb-4">
								<span class="text-sm font-semibold opacity-70 mr-3">Categories:</span>
								<div class="inline-flex gap-2 flex-wrap">
									{categories.map((cat) => (
										<a href={`/categories/${cat.slug}`} class="badge badge-lg badge-primary">
											{cat.name}
										</a>
									))}
								</div>
							</div>
						)}

						{tags.length > 0 && (
							<div>
								<span class="text-sm font-semibold opacity-70 mr-3">Tags:</span>
								<div class="inline-flex gap-2 flex-wrap">
									{tags.map((tag) => (
										<a href={`/tags/${tag.slug}`} class="badge badge-lg badge-ghost">
											{tag.name}
										</a>
									))}
								</div>
							</div>
						)}
					</div>
				)
			}

			<!-- FAQs -->
			{faqs.length > 0 && <FAQSection faqs={faqs} />}

			<!-- Related Posts -->
			{relatedWritings.length > 0 && <RelatedWritings writings={relatedWritings} />}

			<!-- Social Share Buttons -->
			<div class="my-12 pt-8 border-t border-base-300">
				<h3 class="text-display text-xl font-semibold mb-4">Share this article</h3>
				<div class="flex gap-4">
					<button
						class="btn btn-sm btn-outline"
						onclick={`window.open('https://twitter.com/intent/tweet?text=${encodeURIComponent(writing.title)}&url=${encodeURIComponent(Astro.url.href)}', '_blank', 'width=600,height=400')`}
					>
						<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
							<path
								d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"
							></path>
						</svg>
						Twitter
					</button>

					<button
						class="btn btn-sm btn-outline"
						onclick={`window.open('https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}', '_blank', 'width=600,height=400')`}
					>
						<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
							<path
								d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
							></path>
						</svg>
						LinkedIn
					</button>

					<button
						class="btn btn-sm btn-outline"
						onclick={`navigator.clipboard.writeText('${Astro.url.href}')`}
					>
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
							></path>
						</svg>
						Copy Link
					</button>
				</div>
			</div>

			<!-- Author bio (extended) -->
			<div class="my-12 pt-8 border-t border-base-300">
				<AuthorByline author={author} showBio={true} />
			</div>
		</div>
	</article>
</BaseLayout>
