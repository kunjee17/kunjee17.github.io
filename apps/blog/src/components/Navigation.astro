---
// Navigation Component
// Multi-level navigation with theme switcher, search, and mobile menu
const currentPath = Astro.url.pathname;
---

<nav class="navbar bg-base-100 shadow-sm sticky top-0 z-50">
	<div class="content-wrapper">
		<div class="navbar-start">
			<!-- Mobile menu button -->
			<div class="dropdown lg:hidden">
				<label tabindex="0" class="btn btn-ghost btn-square">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						fill="none"
						viewBox="0 0 24 24"
						class="inline-block w-6 h-6 stroke-current"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</label>
				<ul
					tabindex="0"
					class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow-lg bg-base-100 rounded-box w-52"
				>
					<li><a href="/" class:list={["nav-link", { active: currentPath === "/" }]}>Home</a></li>
					<li><a href="/services" class:list={["nav-link", { active: currentPath === "/services" }]}>Services</a></li>
					<li><a href="/writings" class:list={["nav-link", { active: currentPath.startsWith("/writings") }]}>Writing</a></li>
					<li><a href="/about" class:list={["nav-link", { active: currentPath === "/about" }]}>About</a></li>
					<li><a href="/contact" class:list={["nav-link", { active: currentPath === "/contact" }]}>Contact</a></li>
				</ul>
			</div>

			<!-- Logo and site name -->
			<a href="/" class="btn btn-ghost normal-case text-xl text-display">
				<span class="text-script text-2xl">K</span>unjan
			</a>
		</div>

		<!-- Desktop menu -->
		<div class="navbar-center hidden lg:flex">
			<ul class="menu menu-horizontal px-1 gap-2">
				<li><a href="/" class:list={["nav-link", { active: currentPath === "/" }]}>Home</a></li>
				<li><a href="/services" class:list={["nav-link", { active: currentPath === "/services" }]}>Services</a></li>
				<li><a href="/writing" class:list={["nav-link", { active: currentPath.startsWith("/writing") }]}>Writing</a></li>
				<li><a href="/about" class:list={["nav-link", { active: currentPath === "/about" }]}>About</a></li>
				<li><a href="/contact" class:list={["nav-link", { active: currentPath === "/contact" }]}>Contact</a></li>
			</ul>
		</div>

		<div class="navbar-end gap-2">
			<!-- Search button -->
			<button class="btn btn-ghost btn-square" aria-label="Search" id="search-button">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					class="w-6 h-6"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"
					></path>
				</svg>
			</button>

			<!-- Theme toggle -->
			<label class="swap swap-rotate btn btn-ghost btn-square">
				<input type="checkbox" class="theme-controller" value="kunjan-dark" />
				<!-- Sun icon -->
				<svg
					class="swap-off fill-current w-6 h-6"
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 24 24"
				>
					<path
						d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"
					></path>
				</svg>
				<!-- Moon icon -->
				<svg
					class="swap-on fill-current w-6 h-6"
					xmlns="http://www.w3.org/2000/svg"
					viewBox="0 0 24 24"
				>
					<path
						d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"
					></path>
				</svg>
			</label>
		</div>
	</div>
</nav>

<script>
	// Initialize theme from localStorage or system preference
	const theme = localStorage.getItem("theme") || 
		(window.matchMedia("(prefers-color-scheme: dark)").matches ? "kunjan-dark" : "kunjan-light");
	document.documentElement.setAttribute("data-theme", theme);

	// Theme toggle handler
	const themeToggle = document.querySelector(".theme-controller") as HTMLInputElement;
	if (themeToggle) {
		themeToggle.checked = theme === "kunjan-dark";
		themeToggle.addEventListener("change", (e) => {
			const newTheme = (e.target as HTMLInputElement).checked ? "kunjan-dark" : "kunjan-light";
			document.documentElement.setAttribute("data-theme", newTheme);
			localStorage.setItem("theme", newTheme);
		});
	}

	// Search button handler
	const searchButton = document.getElementById("search-button");
	if (searchButton) {
		searchButton.addEventListener("click", () => {
			// Trigger pagefind search modal
			const pagefindUI = document.querySelector("pagefind-ui");
			if (pagefindUI) {
				const input = pagefindUI.shadowRoot?.querySelector("input");
				input?.focus();
			}
		});
	}
</script>
